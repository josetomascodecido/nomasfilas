<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Detail</th>
      <th>Photo</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.detail %></td>
        <td class="foto"> <img style="" src="<%= product.photo %>" alt=""> </td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', local_products_path %></td>
        <td><%= link_to 'Edit', edit_local_product_path() %></td>
        <td><%= link_to 'Destroy', local_product_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

